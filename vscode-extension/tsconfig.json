{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@/*": ["../src/*"],
      "@integrations/*": ["../src/integrations/*"],
      "@services/*": ["../src/services/*"],
      "@utils/*": ["../src/utils/*"],
      "@types/*": ["../src/types/*"]
    }
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../src/**/*.test.ts",
    "../src/**/*.spec.ts"
  ]
}