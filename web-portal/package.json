{
  "name": "cursor-prompt-web-portal",
  "version": "1.0.0",
  "description": "React-based web portal for non-developer template engine access",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "typecheck": "npm run typecheck:shared && npm run typecheck:backend && npm run typecheck:frontend",
    "typecheck:shared": "cd shared && npm run typecheck",
    "typecheck:backend": "cd backend && npm run typecheck",
    "typecheck:frontend": "cd frontend && npm run typecheck",
    "lint": "npm run lint:shared && npm run lint:backend && npm run lint:frontend",
    "lint:shared": "cd shared && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:shared -- --fix && npm run lint:backend -- --fix && npm run lint:frontend -- --fix",
    "test": "npm run test:backend && npm run test:frontend && npm run test:e2e",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --config=playwright.config.ci.js",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "preview": "cd frontend && npm run preview",
    "docker:dev": "docker-compose up --build",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "docker:down": "docker-compose down -v",
    "ci": "npm run lint && npm run typecheck && npm run test",
    "clean": "npm run clean:shared && npm run clean:backend && npm run clean:frontend",
    "clean:shared": "cd shared && npm run clean",
    "clean:backend": "cd backend && rm -rf dist",
    "clean:frontend": "cd frontend && rm -rf dist"
  },
  "keywords": [
    "react",
    "express",
    "template-engine",
    "web-portal",
    "cli-integration"
  ],
  "author": "Adam Manuel",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "concurrently": "^9.0.1",
    "wait-on": "^8.0.1",
    "cross-env": "^7.0.3"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ]
}
