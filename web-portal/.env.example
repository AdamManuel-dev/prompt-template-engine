# Environment Configuration Template
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cursor_prompt_dev
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/cursor_prompt_test

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key

# CLI Configuration
CLI_PATH=../dist/cli.js

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# OAuth Configuration (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Figma Integration (optional)
FIGMA_ACCESS_TOKEN=your-figma-access-token

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# CI/CD Configuration
# These are typically set in CI environment
CI=false
PLAYWRIGHT_BROWSERS_PATH=/usr/lib/chromium
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0

# Performance Monitoring
LIGHTHOUSE_API_KEY=your-lighthouse-api-key
CODECOV_TOKEN=your-codecov-token

# Deployment
DEPLOY_ENVIRONMENT=development
HEALTH_CHECK_URL=http://localhost:3001/api/health

# Security Headers
CONTENT_SECURITY_POLICY_REPORT_URI=https://your-report-uri.com
HSTS_MAX_AGE=31536000

# Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=10000