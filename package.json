{
  "name": "cursor-prompt",
  "version": "0.1.0",
  "description": "CLI tool and VS Code extension for intelligent template-based prompt generation in Cursor IDE",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cprompt": "./dist/cli.js",
    "cursor-prompt": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run proto:generate && tsc --project tsconfig.build.json",
    "build:strict": "tsc --noEmit --strict",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict --noUnusedLocals --noUnusedParameters --exactOptionalPropertyTypes --noUnusedIndexedAccess --noImplicitOverride --noPropertyAccessFromIndexSignature",
    "type-check:tests": "tsc --project tsconfig.test.json --noEmit",
    "proto:generate": "mkdir -p src/generated && node scripts/generate-proto-stubs.js",
    "proto:clean": "rm -rf src/generated",
    "test": "NODE_OPTIONS=\"--max-old-space-size=4096\" jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "clean": "rm -rf dist coverage && npm run proto:clean",
    "prepare": "husky",
    "ci:check": "npm run type-check:strict && npm run lint --max-warnings 0 && npm run test:coverage",
    "precommit": "npm run type-check && npm run lint --max-warnings 0 && npm run test",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "postpublish": "git push && git push --tags",
    "vscode:package": "cd vscode-extension && npm run package",
    "vscode:publish": "cd vscode-extension && vsce publish"
  },
  "keywords": [
    "cursor",
    "prompt",
    "template",
    "cli",
    "ai",
    "claude",
    "typescript",
    "automation",
    "vscode",
    "extension"
  ],
  "author": "Adam Manuel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdamManuel-dev/cursor-prompt-template-engine"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.2",
    "@grpc/proto-loader": "^0.7.15",
    "@types/ws": "^8.18.1",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.0",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "ignore": "^6.0.2",
    "js-yaml": "^4.1.0",
    "lru-cache": "^11.1.0",
    "ora": "^8.2.0",
    "tslib": "^2.8.1",
    "vm2": "^3.9.19",
    "ws": "^8.18.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/diff": "^7.0.2",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22.12.0",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "audit-ci": "^7.1.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "license-checker": "^25.0.1",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "yarn@4.5.3",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
